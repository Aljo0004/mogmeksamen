---
import Product from "./Product.astro";
---

<section class="topsection">
  <button><a href="productlist.html">TILBAGE</a></button>
</section>

<section class="productlist_seciton">
  <div class="grid_3">
    <Product />
  </div>
</section>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  img {
    height: auto;
  }

  /***************** sections *****************/
  .topsection {
    background-color: #e3ded6;
    padding: 2rem;
  }

  @media (min-width: 800px) {
    .productlist_seciton {
      background-color: #ffffff;
      padding: 2rem;
    }
  }

  @media (max-width: 800px) {
    .productlist_seciton {
      background-color: #ffffff;
      padding: 1.5rem;
    }
  }

  /***************** Button *****************/
  button {
    background-color: #e3ded6;
    height: 40px;
    width: 150px;
    border: 2px solid #343434;
    margin-top: 20px;
  }

  button:hover {
    background-color: #e0f1fe;
    height: 40px;
    width: 150px;
    border: 2px solid #343434;
    margin-top: 20px;
    transition: 1s;
  }
  button a {
    text-decoration: none;
    color: var(--dark);
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bolder;
  }

  /***************** grid *****************/

  @media (min-width: 800px) {
    .grid_3 {
      padding: 2rem;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 50px;
      max-width: 100%;
      box-sizing: border-box;
      overflow-x: hidden;
    }
  }

  @media (max-width: 800px) {
    .grid_3 {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      padding: 0.5rem;
      max-width: 100%;
      box-sizing: border-box;
      overflow-x: hidden;
    }
  }

  /***************** sections *****************/
</style>
